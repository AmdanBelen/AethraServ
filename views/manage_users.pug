doctype html
html
  include head
body
    include simple_header
    section#one.main.style1.special
      .container
        h4 User Management
        .table-wrapper
          table.alt#DataTab
            thead
              tr
                th Email
                th First Name
                th Last Name
                th Perm Level
                td Action
            tbody
              each user in users 
                tr
                  td #{user.email}
                  td #{user.firstName}
                  td #{user.lastName}
                  td #{user.permission}
                  td
                    ul.actions
                      li
                        button#delete(type='button') Delete
                      li
                        button#edit(type='button') Edit
            if users
              div(class='12u$')
        form.no-reload(method='post', action='/admin/manage_users')
          .row.uniform(class='50%')
            div(class='3u 12u$(xsmall)')
              input(type='email', name='username', placeholder='Email',required, autofocus)
            div(class='2u 12u$(xsmall)')
              input(type='password', name='password', class='form-control nomargin', placeholder='Password', required)
            div(class='3u 12u$(xsmall)')
              input(type='text', name='firstName', class='form-control', placeholder='First Name',required)
            div(class='3u 12u$(xsmall)')
              input(type='text', name='lastName', class='form-control', placeholder='Last Name',required)
            div(class='12u$')
              ul.actions
                li
                  input.special#save(type='submit', value='Save')
                li
                  input(type='reset', value='Reset')
            div(class='12u$')
              .error-message #{message}
    include footer
    script.
        function RefreshTable() {
          $( "table#DataTab" ).load( window.location.href +" table#DataTab" );
        }
        $("form input#save").on("click", function(event){$( "table#DataTab" ).load( window.location.href +" table#DataTab" );});
        $("table#DataTab button#delete").on("click",function(event){console.log($(this).parents("tr").children().first().text());});