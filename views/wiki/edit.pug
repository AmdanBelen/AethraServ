doctype html
html
  include ../head.pug
  body
    include ../simple_header.pug
    section#one.main.style1.special
      .container
        form(method="post", action=wiki.curr_url)
          .uniform(class='50%')  
            div(class='5u 12u$(xsmall)')
              input(type="text", name="title", value=title, required)
            div(class='5u 12u$(xsmall)')
              if is_new
                input(type="text", name="path", value=wiki.curr_path, required)
              else
                input(type="text", readonly="true", value=wiki.curr_path, required)
            div(class='5u 12u$(xsmall)')
              textarea(name="markdown") #{markdown}
            div(class='12u$')
                ul.actions
                  li
                    input.special(type="submit", value="Save")
    include ../footer.pug